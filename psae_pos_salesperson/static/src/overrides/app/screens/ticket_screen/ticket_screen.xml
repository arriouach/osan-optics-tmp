<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//div[contains(text(), 'Cashier')]" position="after">
            <div class="col p-2">Salesperson</div>
        </xpath>
        <xpath expr="//t[@t-esc='getCashier(order)']/.." position="after">
            <div class="col p-2">
                <t t-out="getSalesperson(order)"></t>
            </div>
        </xpath>
    </t>
</templates>
