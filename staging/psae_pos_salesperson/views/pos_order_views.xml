<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.form.inherit.psae_pos_salesperson</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <group name="order_fields" position="inside">
                <field name="salesperson_id" readonly="state != 'draft'"/>
            </group>
        </field>
    </record>

    <record id="view_pos_order_tree" model="ir.ui.view">
        <field name="name">pos.order.list.inherit.psae_pos_salesperson</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="salesperson_id" optional="hide"/>
            </field>
        </field>
    </record>
</odoo>
