<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.RefundButton" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('control-button')]" position="attributes">
            <attribute name="t-att-class">
                {'disabled': this.pos.get_cashier().can_refund === false}
            </attribute>
        </xpath>
    </t>
</templates>
