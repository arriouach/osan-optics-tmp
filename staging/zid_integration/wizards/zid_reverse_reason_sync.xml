<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_zid_reverse_reason_sync_form" model="ir.ui.view">
        <field name="name">zid.reverse.reason.sync.form</field>
        <field name="model">zid.reverse.reason.sync</field>
        <field name="arch" type="xml">
            <form string="Sync/Add Reverse Reasons">
                <sheet>
                    <group>
                        <field name="zid_connector_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>

                    <notebook>
                        <page string="Sync Reasons">
                            <group>
                                <div class="text-muted">
                                    <i class="fa fa-info-circle"/> Click the button below to sync all reverse reasons from Zid
                                </div>
                            </group>
                            <footer>
                                <button name="action_sync_reasons"
                                        string="Sync Reasons"
                                        type="object"
                                        class="btn-primary"
                                        icon="fa-refresh"/>
                            </footer>
                        </page>

                        <page string="Add New Reason">
                            <group>
                                <field name="add_new_reason" invisible="1"/>
                                <field name="new_reason_name"
                                       placeholder="e.g., Wrong size, Damaged product, etc."
                                       required="add_new_reason"/>
                            </group>
                            <footer>
                                <button name="action_add_reason"
                                        string="Add Reason"
                                        type="object"
                                        class="btn-success"
                                        icon="fa-plus"/>
                            </footer>
                        </page>
                    </notebook>

                    <footer position="replace">
                        <button string="Close"
                                class="btn-secondary"
                                special="cancel"
                                data-hotkey="x"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for wizard -->
    <record id="action_zid_reverse_reason_sync" model="ir.actions.act_window">
        <field name="name">Sync/Add Reverse Reasons</field>
        <field name="res_model">zid.reverse.reason.sync</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu item for wizard -->
</odoo>
