<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Debug Wizard Form View -->
    <record id="view_zid_stock_debug_wizard_form" model="ir.ui.view">
        <field name="name">zid.stock.debug.wizard.form</field>
        <field name="model">zid.stock.debug.wizard</field>
        <field name="arch" type="xml">
            <form string="Zid Stock Debug">
                <group>
                    <field name="product_id"/>
                </group>
                <separator string="Debug Information"/>
                <field name="debug_info" widget="text" style="font-family: monospace;"/>
                <footer>
                    <button name="action_refresh" 
                            string="Refresh" 
                            type="object" 
                            class="btn-secondary"/>
                    <button name="action_force_sync" 
                            string="Force Sync All Locations" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Close" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Debug Wizard Action (Admin Only) -->
    <record id="action_zid_stock_debug_wizard" model="ir.actions.act_window">
        <field name="name">Debug Zid Stock</field>
        <field name="res_model">zid.stock.debug.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4, ref('zid_integration.group_zid_admin'))]"/>
    </record>
</odoo>
