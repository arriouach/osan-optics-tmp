<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Health Report Wizard Form -->
    <record id="view_zid_health_report_wizard" model="ir.ui.view">
        <field name="name">zid.health.report.wizard.form</field>
        <field name="model">zid.health.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sync Health Report">
                <sheet>
                    <div class="oe_title">
                        <h1>Integration Health Report</h1>
                        <p>Comprehensive health analysis of your Zid integration</p>
                    </div>
                    
                    <group>
                        <field name="connector_id" readonly="1"/>
                    </group>
                    
                    <!-- Connection Health -->
                    <group string="Connection Health">
                        <group>
                            <field name="connection_status" readonly="1"/>
                            <field name="last_sync_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="health_score" readonly="1" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <!-- Statistics -->
                    <group string="Statistics">
                        <group>
                            <field name="total_products" readonly="1"/>
                            <field name="total_orders" readonly="1"/>
                            <field name="total_customers" readonly="1"/>
                        </group>
                        <group>
                            <field name="today_orders" readonly="1"/>
                            <field name="week_orders" readonly="1"/>
                            <field name="month_revenue" readonly="1" widget="monetary"/>
                        </group>
                    </group>
                    
                    <!-- Issues -->
                    <group string="Issues Detected">
                        <group>
                            <field name="pending_orders" readonly="1"/>
                            <field name="low_stock_products" readonly="1"/>
                        </group>
                        <group>
                            <field name="sync_errors" readonly="1"/>
                            <field name="failed_webhooks" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Recommendations -->
                    <group string="Recommendations">
                        <field name="recommendations" nolabel="1" widget="text" readonly="1"/>
                    </group>
                    
                    <!-- Recent Errors -->
                    <notebook>
                        <page string="Recent Errors">
                            <field name="error_log_ids" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Fix Connection" name="action_fix_connection" type="object" 
                            class="btn-danger" invisible="connection_status == 'connected'"/>
                    <button string="View Errors" name="action_view_errors" type="object" 
                            class="btn-warning" invisible="sync_errors == 0"/>
                    <button string="View Low Stock" name="action_view_low_stock" type="object" 
                            class="btn-warning" invisible="low_stock_products == 0"/>
                    <button string="View Pending Orders" name="action_view_pending_orders" type="object" 
                            class="btn-info" invisible="pending_orders == 0"/>
                    <button string="Run Sync" name="action_run_sync" type="object" class="btn-primary"/>
                    <button string="Export Report" name="action_export_report" type="object" class="btn-secondary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Health Report Wizard Action -->
    <record id="action_zid_health_report_wizard" model="ir.actions.act_window">
        <field name="name">Sync Health Report</field>
        <field name="res_model">zid.health.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
