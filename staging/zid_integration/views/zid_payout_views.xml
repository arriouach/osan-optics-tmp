<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sequence -->
        <record id="seq_zid_payout" model="ir.sequence">
            <field name="name">Zid Payout</field>
            <field name="code">zid.payout</field>
            <field name="prefix">PAY/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- View -->
        <record id="view_zid_payout_tree" model="ir.ui.view">
            <field name="name">zid.payout.tree</field>
            <field name="model">zid.payout</field>
            <field name="arch" type="xml">
                <list string="Payouts" decoration-success="state=='reconciled'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="settlement_date"/>
                    <field name="amount_total"/>
                    <field name="amount_fees"/>
                    <field name="amount_net"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_zid_payout_form" model="ir.ui.view">
            <field name="name">zid.payout.form</field>
            <field name="model">zid.payout</field>
            <field name="arch" type="xml">
                <form string="Payout">
                    <header>
                        <button name="action_post" string="Post" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_reconcile" string="Reconcile" type="object" class="btn-secondary" invisible="state != 'posted'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="zid_connector_id"/>
                                <field name="settlement_date"/>
                            </group>
                            <group>
                                <field name="amount_total"/>
                                <field name="amount_fees"/>
                                <field name="amount_net"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Transactions">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="transaction_type"/>
                                        <field name="zid_order_id"/>
                                        <field name="reference"/>
                                        <field name="amount"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="action_zid_payout" model="ir.actions.act_window">
            <field name="name">Payouts</field>
            <field name="res_model">zid.payout</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
