<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Zid Variants -->
    <record id="view_zid_variant_tree" model="ir.ui.view">
        <field name="name">zid.variant.tree</field>
        <field name="model">zid.variant</field>
        <field name="arch" type="xml">
            <list string="Zid Variants" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="main_image" widget="image" options="{'size': [64, 64]}" string="Image" optional="show"/>
                <field name="display_name"/>
                <field name="parent_product_id"/>
                <field name="sku"/>
                <field name="color" optional="show"/>
                <field name="size" optional="show"/>
                <field name="price" widget="monetary"/>
                <field name="sale_price" widget="monetary" optional="show"/>
                <field name="quantity" sum="Total Quantity"/>
                <field name="is_infinite" optional="hide"/>
                <field name="is_available" widget="boolean_toggle"/>
                <field name="is_published" widget="boolean_toggle" optional="show"/>
                <field name="last_sync_date" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View for Zid Variants -->
    <record id="view_zid_variant_form" model="ir.ui.view">
        <field name="name">zid.variant.form</field>
        <field name="model">zid.variant</field>
        <field name="arch" type="xml">
            <form string="Zid Variant">
                <header>
                    <button name="action_relink_odoo_product" string="Relink With Odoo Product"
                            type="object" class="btn-primary"/>
                    <button name="action_sync_stock_from_odoo" string="Sync Stock from Odoo"
                            type="object" invisible="not odoo_product_id"/>
                </header>
                <sheet>
<!--                    <div class="oe_button_box" name="button_box">-->
<!--                        <button name="action_view_odoo_product" type="object"-->
<!--                                class="oe_stat_button" icon="fa-cube"-->
<!--                                invisible="not odoo_product_id">-->
<!--                            <field name="odoo_product_id" widget="statinfo" string="Odoo Product"/>-->
<!--                        </button>-->
<!--                    </div>-->

                    <widget name="web_ribbon" title="Published"
                            bg_color="bg-success"
                            invisible="not is_published"/>
                    <widget name="web_ribbon" title="Draft"
                            bg_color="bg-warning"
                            invisible="not is_draft"/>
                    <widget name="web_ribbon" title="Out of Stock"
                            bg_color="bg-danger"
                            invisible="is_infinite or quantity &gt; 0"/>

                    <field name="main_image" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="display_name"/>
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                        <group>
                            <field name="sku" readonly="1"/>
                            <field name="barcode" readonly="1"/>
                        </group>
                    </div>

                    <group>
                        <group string="Product Information">
                            <field name="zid_connector_id" readonly="1"/>
                            <field name="parent_product_id" readonly="1"/>
                            <field name="zid_variant_id" readonly="1"/>
                            <field name="name_en"/>
                            <field name="name_ar"/>
                            <field name="slug" readonly="1"/>
                        </group>

                        <group string="Pricing">
                            <field name="price"/>
                            <field name="sale_price"/>
                            <field name="cost"/>
                            <field name="formatted_price" readonly="1"/>
                            <field name="formatted_sale_price" readonly="1"/>
                            <field name="currency_code" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Inventory">
                            <field name="quantity"/>
                            <field name="is_infinite"/>
                            <field name="is_available" readonly="1"/>
                        </group>

                        <group string="Attributes">
                            <field name="color" readonly="1"/>
                            <field name="size" readonly="1"/>
                            <field name="weight_value"/>
                            <field name="weight_unit"/>
                        </group>
                    </group>

                    <group>
                        <group string="Settings">
                            <field name="is_published"/>
                            <field name="is_draft"/>
                            <field name="is_taxable"/>
                            <field name="requires_shipping"/>
                        </group>

                        <group string="Purchase Restrictions">
                            <field name="min_quantity_per_cart"/>
                            <field name="max_quantity_per_cart"/>
                            <field name="availability_period_start"/>
                            <field name="availability_period_end"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Stock by Location" name="stock_lines">
                            <field name="stock_line_ids">
                                <list editable="bottom" create="0" delete="0">
                                    <field name="location_id" readonly="1"/>
                                    <field name="location_type" readonly="1"/>
                                    <field name="available_quantity"/>
                                    <field name="is_infinite"/>
                                    <field name="display_quantity" readonly="1"/>
                                    <field name="stock_level" widget="badge" readonly="1"/>
                                    <field name="last_update" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Additional Info" name="additional_info">
                            <group>
                                <group string="URLs">
                                    <field name="html_url" widget="url"/>
                                </group>
                                <group string="Timestamps">
                                    <field name="zid_created_at" readonly="1"/>
                                    <field name="zid_updated_at" readonly="1"/>
                                    <field name="last_sync_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Description">
                                <field name="short_description" colspan="2"/>
                            </group>
                        </page>

                        <page string="Raw Data" name="raw_data" groups="base.group_no_one">
                            <group>
                                <field name="attributes_data" widget="ace" options="{'mode': 'json'}"/>
                                <field name="images_data" widget="ace" options="{'mode': 'json'}"/>
                                <field name="meta_data" widget="ace" options="{'mode': 'json'}"/>
                                <field name="raw_response" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Media" name="media">
                            <field name="zid_image_ids" mode="kanban">
                                <kanban string="Gallery Images">
                                    <field name="id"/>
                                    <field name="image"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="o_kanban_image_container">
                                                <field name="image" widget="image" class="o_kanban_image"/>
                                            </div>
                                            <div class="o_kanban_details">
                                                <div class="o_kanban_record_top">
                                                    <div class="o_kanban_record_headings">
                                                        <strong class="o_kanban_record_title">
                                                            Sequence: <field name="sequence"/>
                                                        </strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Odoo Product" name="odoo_product">
                            <group>
                                <field name="odoo_product_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View for Zid Variants -->
    <record id="view_zid_variant_search" model="ir.ui.view">
        <field name="name">zid.variant.search</field>
        <field name="model">zid.variant</field>
        <field name="arch" type="xml">
            <search string="Search Zid Variants">
                <field name="display_name"/>
                <field name="sku"/>
                <field name="barcode"/>
                <field name="parent_product_id"/>

                <filter string="Published" name="published"
                        domain="[('is_published', '=', True)]"/>
                <filter string="Draft" name="draft"
                        domain="[('is_draft', '=', True)]"/>
                <filter string="In Stock" name="in_stock"
                        domain="['|', ('is_infinite', '=', True), ('quantity', '&gt;', 0)]"/>
                <filter string="Out of Stock" name="out_of_stock"
                        domain="[('is_infinite', '=', False), ('quantity', '&lt;=', 0)]"/>
                <filter string="Low Stock" name="low_stock"
                        domain="[('is_infinite', '=', False), ('quantity', '&lt;=', 10), ('quantity', '&gt;', 0)]"/>

                <separator/>

                <filter string="Has Sale Price" name="on_sale"
                        domain="[('sale_price', '&gt;', 0)]"/>
                <filter string="Taxable" name="taxable"
                        domain="[('is_taxable', '=', True)]"/>

                <group expand="0" string="Group By">
                    <filter string="Parent Product" name="group_parent"
                            context="{'group_by': 'parent_product_id'}"/>
                    <filter string="Color" name="group_color"
                            context="{'group_by': 'color'}"/>
                    <filter string="Size" name="group_size"
                            context="{'group_by': 'size'}"/>
                    <filter string="Stock Status" name="group_available"
                            context="{'group_by': 'is_available'}"/>
                    <filter string="Published Status" name="group_published"
                            context="{'group_by': 'is_published'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View for Zid Variants -->
    <record id="view_zid_variant_kanban" model="ir.ui.view">
        <field name="name">zid.variant.kanban</field>
        <field name="model">zid.variant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="display_name"/>
                <field name="sku"/>
                <field name="price"/>
                <field name="sale_price"/>
                <field name="quantity"/>
                <field name="is_infinite"/>
                <field name="is_available"/>
                <field name="main_image_url"/>
                <field name="color"/>
                <field name="size"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="record.main_image_url.value"
                                     t-if="record.main_image_url.value"
                                     class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="display_name"/>
                                </strong>
                                <div class="text-muted">
                                    <field name="sku"/>
                                </div>
                                <div>
                                    <span t-if="record.color.value" class="badge badge-secondary">
                                        <field name="color"/>
                                    </span>
                                    <span t-if="record.size.value" class="badge badge-info">
                                        <field name="size"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="price" widget="monetary"/>
                                        <span t-if="record.sale_price.value &gt; 0" class="text-danger">
                                            <field name="sale_price" widget="monetary"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.is_infinite.value" class="badge badge-success">
                                            Unlimited
                                        </span>
                                        <span t-elif="record.quantity.value &gt; 0" class="badge badge-primary">
                                            <field name="quantity"/> units
                                        </span>
                                        <span t-else="" class="badge badge-danger">
                                            Out of Stock
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action for Zid Variants -->
    <record id="action_zid_variant" model="ir.actions.act_window">
        <field name="name">Zid Variants</field>
        <field name="res_model">zid.variant</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_zid_variant_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Zid variants found
            </p>
            <p>
                Import variants from Zid using the import wizard
            </p>
        </field>
    </record>

    <!-- Menu Items -->
</odoo>
