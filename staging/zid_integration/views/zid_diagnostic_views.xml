<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_zid_diagnostic_form" model="ir.ui.view">
        <field name="name">zid.diagnostic.form</field>
        <field name="model">zid.diagnostic</field>
        <field name="arch" type="xml">
            <form string="Zid Diagnostic Tool">
                <sheet>
                    <group>
                        <field name="connector_id" required="1"/>
                    </group>
                    <footer>
                        <button name="diagnose_product_mappings" string="Diagnose Product Mappings" type="object" class="btn-primary"/>
                        <button name="diagnose_recent_orders" string="Diagnose Recent Orders" type="object" class="btn-secondary"/>
                        <button name="diagnose_automation_settings" string="Diagnose Automation Settings" type="object" class="btn-info"/>
                        <button name="diagnose_payment_mappings" string="Diagnose Payment Mappings" type="object" class="btn-warning"/>
                        <button name="test_pos_order_fetch" string="Test POS Order Fetch" type="object" class="btn-danger"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_zid_diagnostic" model="ir.actions.act_window">
        <field name="name">Zid Diagnostic Tool</field>
        <field name="res_model">zid.diagnostic</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_zid_diagnostic"
              name="Diagnostic Tool"
              parent="menu_zid_configuration"
              action="action_zid_diagnostic"
              sequence="99"/>

    <record id="view_zid_diagnostic_result_form" model="ir.ui.view">
        <field name="name">zid.diagnostic.result.form</field>
        <field name="model">zid.diagnostic.result</field>
        <field name="arch" type="xml">
            <form string="Diagnostic Results">
                <sheet>
                    <group>
                        <field name="title" readonly="1"/>
                    </group>
                    <group>
                        <field name="content" widget="text" readonly="1" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Close" class="btn-primary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>