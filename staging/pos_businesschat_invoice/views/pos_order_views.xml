<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_order_form_businesschat" model="ir.ui.view">
        <field name="name">pos.order.form.businesschat</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_send_invoice_to_businesschat"
                        string="Send to BusinessChat"
                        type="object"
                        class="oe_highlight"
                        invisible="not account_move"/>
            </xpath>
        </field>
    </record>
</odoo>
