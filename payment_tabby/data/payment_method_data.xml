<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
    <record id="payment_method_tabby" model="payment.method">
        <field name="name">Pay in 4. No interest, no fees. / قسّمها على 4. بدون أي فوائد، أو رسوم </field>
        <field name="code">tabby</field>
        <field name="sequence">1000</field>
        <field name="active">False</field>
        <field name="image" type="base64" file="payment_tabby/static/description/icon.png"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">partial</field>
        <field name="supported_country_ids"
               eval="[Command.set([
                         ref('base.sa'),
                         ref('base.ae'),
                         ref('base.kw'),
                         ref('base.bh'),
                         ref('base.qa'),
                     ])]"
        />
        <field name="supported_currency_ids"
               eval="[Command.set([
                         ref('base.SAR'),
                         ref('base.AED'),
                         ref('base.KWD'),
                         ref('base.BSD'),
                         ref('base.QAR'),
                     ])]"
        />
    </record>
</odoo>
