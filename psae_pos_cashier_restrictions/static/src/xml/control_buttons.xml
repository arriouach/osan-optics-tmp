<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_pricelist_button')]" position="attributes">
            <attribute name="t-att-class">
                {'disabled': this.pos.get_cashier().can_change_price_list === false}
            </attribute>
        </xpath>

        <xpath expr="//i[@title='Refund']/.." position="attributes">
            <attribute name="t-att-class">
                {'disabled': this.pos.get_cashier().can_refund === false}
            </attribute>
        </xpath>
    </t>
</templates>
