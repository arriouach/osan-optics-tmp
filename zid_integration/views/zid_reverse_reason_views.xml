<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_zid_reverse_reason_tree" model="ir.ui.view">
        <field name="name">zid.reverse.reason.tree</field>
        <field name="model">zid.reverse.reason</field>
        <field name="arch" type="xml">
            <list string="Reverse Reasons" editable="bottom">
                <field name="name"/>
                <field name="zid_reason_id" readonly="1"/>
                <field name="usage_count" readonly="1"/>
                <field name="zid_connector_id" invisible="context.get('hide_connector', False)"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_zid_reverse_reason_form" model="ir.ui.view">
        <field name="name">zid.reverse.reason.form</field>
        <field name="model">zid.reverse.reason</field>
        <field name="arch" type="xml">
            <form string="Reverse Reason">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="zid_reason_id" readonly="1"/>
                            <field name="zid_connector_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="usage_count" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_zid_reverse_reason_search" model="ir.ui.view">
        <field name="name">zid.reverse.reason.search</field>
        <field name="model">zid.reverse.reason</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="filter_active" string="Active" domain="[('active','=',True)]"/>
                <filter name="filter_inactive" string="Inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter name="filter_most_used" string="Most Used" domain="[('usage_count','&gt;',0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_connector" string="Connector" context="{'group_by':'zid_connector_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_zid_reverse_reason" model="ir.actions.act_window">
        <field name="name">Reverse Reasons</field>
        <field name="res_model">zid.reverse.reason</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_zid_reverse_reason_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No reverse reasons found
            </p>
            <p>
                Sync reasons from Zid or add new ones
            </p>
        </field>
    </record>

    <!-- Menu -->
</odoo>
