<?xml version="1.0" encoding="utf-8"?>
<!-- views/zid_webhook_views.xml -->
<odoo>
    <!-- Tree View -->
    <record id="view_zid_webhook_tree" model="ir.ui.view">
        <field name="name">zid.webhook.tree</field>
        <field name="model">zid.webhook</field>
        <field name="arch" type="xml">
            <list string="Zid Webhooks">
                <field name="event"/>
                <field name="zid_connector_id"/>
                <field name="webhook_url"/>
                <field name="is_active"/>
                <field name="zid_webhook_id"/>
                <field name="last_triggered"/>
                <field name="trigger_count"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_zid_webhook_form" model="ir.ui.view">
        <field name="name">zid.webhook.form</field>
        <field name="model">zid.webhook</field>
        <field name="arch" type="xml">
            <form string="Zid Webhook">
                <header>
                    <button class="btn-primary" invisible="zid_webhook_id != False" name="register_webhook"
                            string="Register in Zid" type="object"/>
                    <button class="btn-danger" invisible="zid_webhook_id == False" name="unregister_webhook"
                            string="Unregister" type="object"/>
                    <button class="btn-info" name="test_webhook" string="Test Webhook" type="object" groups="base.group_no_one"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="zid_connector_id"/>
                            <field name="event"/>
                            <field name="webhook_url"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="zid_webhook_id"/>
                            <field name="last_triggered"/>
                            <field name="trigger_count"/>
                        </group>
                    </group>
                    <group string="Conditions (Optional)">
                        <field name="conditions" options="{'mode': 'json'}" widget="ace"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_zid_webhooks" model="ir.actions.act_window">
        <field name="name">Zid Webhooks</field>
        <field name="res_model">zid.webhook</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
