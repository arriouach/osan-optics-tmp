<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_zid_product_category_form" model="ir.ui.view">
            <field name="name">zid.product.category.form</field>
            <field name="model">zid.product.category</field>
            <field name="arch" type="xml">
                <form string="Zid Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name_en"/>
                                <field name="name_ar"/>
                                <field name="zid_category_id" readonly="1"/>
                                <field name="zid_connector_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="parent_id"/>
                                <field name="odoo_category_id"/>
                                <field name="sequence"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                        <group string="Details">
                             <field name="description_en"/>
                             <field name="description_ar"/>
                             <field name="image_url" widget="url"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_zid_product_category_tree" model="ir.ui.view">
            <field name="name">zid.product.category.tree</field>
            <field name="model">zid.product.category</field>
            <field name="arch" type="xml">
                <list string="Zid Categories">
                    <field name="sequence" widget="handle"/>
                    <field name="display_name"/>
                    <field name="zid_category_id"/>
                    <field name="parent_id"/>
                    <field name="odoo_category_id"/>
                    <field name="is_active"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_zid_product_category_search" model="ir.ui.view">
            <field name="name">zid.product.category.search</field>
            <field name="model">zid.product.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name_en"/>
                    <field name="name_ar"/>
                    <field name="zid_category_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Parent Category" name="group_parent" context="{'group_by': 'parent_id'}"/>
                        <filter string="Connector" name="group_connector" context="{'group_by': 'zid_connector_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_zid_product_category" model="ir.actions.act_window">
            <field name="name">Zid Categories</field>
            <field name="res_model">zid.product.category</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No categories found. Sync them from Zid!
                </p>
            </field>
        </record>
    </data>
</odoo>
