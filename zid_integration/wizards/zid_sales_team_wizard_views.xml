<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_zid_sales_team_wizard_form" model="ir.ui.view">
        <field name="name">zid.sales.team.wizard.form</field>
        <field name="model">zid.sales.team.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Team Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>Sales Team Setup</h1>
                        <p>Configure default salesperson and sales team for Zid orders</p>
                    </div>
                    
                    <group>
                        <field name="connector_id" required="1"/>
                    </group>
                    
                    <group string="Current Settings" invisible="not connector_id">
                        <group>
                            <field name="current_user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="current_team_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Statistics" invisible="not connector_id">
                        <group>
                            <field name="total_orders_last_month" readonly="1"/>
                        </group>
                        <group>
                            <field name="orders_with_salesperson" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="New Configuration" invisible="not connector_id">
                        <group>
                            <field name="default_team_id"/>
                            <field name="default_user_id" domain="[('share', '=', False)]"/>
                        </group>
                        <group>
                            <field name="assignment_strategy" widget="radio"/>
                        </group>
                    </group>
                    
                    <field name="recommendation" invisible="not connector_id"/>
                    
                    <div class="alert alert-warning" role="alert" invisible="not connector_id">
                        <h5>Sales Team Benefits:</h5>
                        <ul>
                            <li><strong>Order Tracking:</strong> Clear ownership of each order</li>
                            <li><strong>Commission Tracking:</strong> Automatic commission calculation</li>
                            <li><strong>Customer Relationships:</strong> Consistent customer contact</li>
                            <li><strong>Performance Analytics:</strong> Sales team performance reports</li>
                            <li><strong>Follow-up Management:</strong> Automated follow-up reminders</li>
                        </ul>
                        <p><strong>Tip:</strong> Create a dedicated e-commerce sales team for better organization.</p>
                    </div>
                </sheet>
                <footer>
                    <button name="action_apply_settings" string="Apply Settings" type="object" class="btn-primary" invisible="not connector_id"/>
                    <button name="action_create_sales_team" string="Create New Sales Team" type="object" class="btn-secondary" invisible="not connector_id"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_zid_sales_team_wizard" model="ir.actions.act_window">
        <field name="name">Configure Sales Team</field>
        <field name="res_model">zid.sales.team.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_zid_sales_team_wizard"
              name="Sales Team Config"
              parent="menu_zid_configuration"
              action="action_zid_sales_team_wizard"
              sequence="18"/>
</odoo>