<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_zid_product_sync_wizard" model="ir.ui.view">
        <field name="name">zid.product.sync.wizard.form</field>
        <field name="model">zid.product.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Sync Products from Zid">
                <group>
                    <field name="zid_connector_id" readonly="1"/>
                    <field name="sync_images"/>
                    <field name="update_existing"/>
                </group>
                <footer>
                    <button string="Sync Products" name="action_sync_products" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
